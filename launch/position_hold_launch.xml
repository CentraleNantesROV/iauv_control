<launch>
  <arg name="model_name" default="bluerov2"/>
  <arg name="iauv_name" default="$(var model_name)"/>
  
  <arg name="control_pkg" default="$(var model_name)_control"/>

 <include file="$(find-pkg-share $(var control_pkg))/launch/thruster_manager_launch.xml">
    <arg name="iauv_name" value="$(var iauv_name)" />
    <arg name="model_name" value="$(var model_name)" />
  </include>

  <group>
    <push-ros-namespace namespace="$(var iauv_name)"/>

    <node pkg="iauv_control_cascaded_pid" exec="acceleration_control.py" name="acceleration_control"
          output="screen">
      <param name="tf_prefix" type="string" value="$(var iauv_name)/" />
      <param from="$(find-pkg-share $(var control_pkg))/config/inertial.yaml"/>
    </node>

   <node pkg="iauv_control_cascaded_pid" exec="velocity_control.py" name="velocity_control"
          output="screen">
      <remap from="odom" to="/$(var iauv_name)/pose_gt"/>
      <remap from="cmd_accel" to="/$(var iauv_name)/cmd_accel"/>
      <param from="$(find-pkg-share $(var control_pkg))/config/vel_pid_control.yaml"/>
    </node>
 
    <node pkg="iauv_control_cascaded_pid" exec="position_control.py" name="position_control"
          output="screen">
      <remap from="odom" to="/$(var iauv_name)/pose_gt"/>
      <param from="$(find-pkg-share $(var control_pkg))/config/pos_pid_control.yaml"/>
    </node>
  </group>
</launch>